<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    tools:context=".ui.Contact.ContactFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2096da"
            android:paddingEnd="0dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/search_filled_40px"
            ></ImageButton>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="Tìm kiếm"
            android:drawableLeft="@drawable/find_user_male_45px"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="#2096da"
            android:layout_toLeftOf="@+id/image_find"
            >
        </EditText>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".ui.Message.MessageFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>